<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jm.projectmaliys.TagChoice_M">

    <ImageButton
        android:id="@+id/btnsun"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/sun1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="62dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:tag="sun"/>

    <ImageButton
        android:id="@+id/btncloud"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/cloud1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="90dp"
        app:layout_constraintLeft_toRightOf="@+id/btnsun"
        android:layout_marginLeft="86dp"
        android:tag="cloud"/>

    <ImageButton
        android:id="@+id/btnrain"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/rain1"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/btnsun"
        android:layout_marginLeft="62dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:tag="rain"/>

    <ImageButton
        android:id="@+id/btnsnow"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/snow1"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/btncloud"
        app:layout_constraintLeft_toRightOf="@+id/btnrain"
        android:layout_marginLeft="86dp"
        android:tag="snow"/>

</android.support.constraint.ConstraintLayout>

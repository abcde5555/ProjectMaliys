<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detail_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <Button
                android:id="@+id/btnMap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:onClick="onBtnMapClicked"
                android:text="Map"/>

            <LinearLayout
                android:id="@+id/action_container"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:visibility="visible">

            </LinearLayout>

            <ImageView
                android:id="@+id/image_main"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="16dp"/>

            <RadioGroup
                android:id="@+id/weathers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rb_sun"
                    android:button="@drawable/radio_sun"
                    android:text="맑음"
                    android:textColor="#00000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"/>
                <RadioButton
                    android:id="@+id/rb_cloud"
                    android:button="@drawable/radio_cloud"
                    android:text="흐림"
                    android:textColor="#00000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"/>
                <RadioButton
                    android:id="@+id/rb_rain"
                    android:button="@drawable/radio_rain"
                    android:text="비"
                    android:textColor="#00000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"/>
                <RadioButton
                    android:id="@+id/rb_snow"
                    android:button="@drawable/radio_snow"
                    android:text="눈"
                    android:textColor="#00000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RadioGroup>

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:hint="오늘 하루는 어땠나요"
                android:gravity="top"
                android:inputType="text|textMultiLine"
                android:lines="10"
                android:background="#40000000"/>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>
